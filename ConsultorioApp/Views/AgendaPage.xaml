<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsultorioApp.Views.AgendaPage"
             Title="Agenda">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Agenda do Consultório"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Seletor de data -->
        <DatePicker x:Name="DataSelecionadaPicker"
                    Date="{x:Static sys:DateTime.Now}"
                    xmlns:sys="clr-namespace:System;assembly=netstandard"
                    DateSelected="OnDataSelecionadaChanged" />

        <!-- Botão para adicionar nova consulta -->
        <Button Text="Agendar Nova Consulta"
                Clicked="OnNovaConsultaClicked"
                BackgroundColor="#0078D7"
                TextColor="White"
                CornerRadius="8"
                Margin="0,10" />

        <!-- Lista de consultas do dia -->
        <CollectionView x:Name="ConsultasList" SelectionMode="None">
            <CollectionView.EmptyView>
                <Label Text="Nenhuma consulta para esta data."
                       TextColor="Gray"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Horario, StringFormat='{}{0:HH\\:mm}'}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Paciente}" FontSize="16" />
                            <Label Text="{Binding Observacoes}" 
                                   FontSize="13" 
                                   TextColor="Gray" 
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
