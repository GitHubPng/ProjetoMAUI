<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsultorioApp.Views.PacientesPage"
             Title="Pacientes">

    <VerticalStackLayout Padding="20">
        <Label Text="Lista de Pacientes" 
               FontSize="20" 
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- BotÃ£o para novo paciente -->
        <Button Text="Cadastrar Novo Paciente" 
                Clicked="OnNovoPacienteClicked"
                Margin="0,10,0,20" />

        <!-- Lista de pacientes -->
        <CollectionView x:Name="PacientesList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nome}" FontSize="18" />
                            <Label Text="{Binding Telefone}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
