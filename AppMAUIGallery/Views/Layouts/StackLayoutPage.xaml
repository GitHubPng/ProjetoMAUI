<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">


    <StackLayout
        Margin="20"
        Padding="20"
        Spacing="10"
        BackgroundColor="AliceBlue"
        Orientation="Vertical">
        <Label Text="Olá mundo" />


        <StackLayout Spacing="10" Orientation="Horizontal">
            <Button Text="Olá mundo 1!"  HorizontalOptions="Start"/>
            <Button Text="Olá mundo 2!" HorizontalOptions="Start" />
        </StackLayout>

        <VerticalStackLayout Spacing="10"  Padding="10" BackgroundColor="Aquamarine">
            <Label Text="Olá Mundo 1!" />
            <Label Text="Olá Mundo 2!" />
        </VerticalStackLayout>

        <HorizontalStackLayout Spacing="20" Padding="10" BackgroundColor="Aquamarine">
            <Label Text="Olá Mundo 1!" />
            <Label Text="Olá Mundo 2!" />
        </HorizontalStackLayout>

        <Button
            Text="Olá mundo!"
            HeightRequest="100"
            HorizontalOptions="Center"
            WidthRequest="200" />
    </StackLayout>
</ContentPage>